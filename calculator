a=int(input("enter a"))
b=int(input("enter b"))
ch=int(input("enter ch"))
if ch==1:
  sum=a+b
  print("the sum is",sum)
elif ch==2:
  diff=a-b
  print("the diff is",diff)
elif ch==3:
  pro=a*b
  print("the product is",pro)
elif ch==4:
  div=a/b
  print("the quotient is",div)
elif ch==5:
  rem=a%b
  print("the rem is",rem)
else:
  print("invalid choice")
